<core:FragmentDefinition xmlns:l="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m">
    <List class="sapUiContentPadding">
        <InputListItem label="WLAN" class="sapUiTinyMargin myCustomText">
            <MultiInput width="200px" id="multiInput" class="sapUiTinyMargin sapUiContentPadding">
                <core:Item key="{ProductId}" text="{Name}" />
            </MultiInput>
        </InputListItem>
        <InputListItem label="Flight Mode" class="sapUiTinyMargin myCustomText">
            <CheckBox selected="true" />
        </InputListItem>
        <InputListItem label="High Performance" class="sapUiTinyMargin myCustomText">
            <RadioButton groupName="GroupInputListItem" selected="true" />
        </InputListItem>
        <InputListItem label="Battery Saving" class="sapUiTinyMargin myCustomText">
            <RadioButton groupName="GroupInputListItem" />
        </InputListItem>
    </List>
</core:FragmentDefinition>